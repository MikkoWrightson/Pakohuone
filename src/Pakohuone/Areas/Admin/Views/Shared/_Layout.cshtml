<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    @*Bootstrap 4.3.1*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*DataTables (Bootstrap 4) 1.10.19*@
    <link rel="stylesheet" href="~/lib/datatables.net-bs4/css/dataTables.bootstrap4.min.css" />
    @*Font Awesome 5.1.0*@
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />

    <link rel="stylesheet" href="~/css/admin/layout.css" />

    @RenderSection("Styles", false)
</head>
<body>
    <div id="wrapper" class="d-flex">
        <div id="sidebar" class="bg-light border-right">
            <div id="sidebar-header" class="d-flex align-items-center justify-content-center border-bottom">
                <h3 class="mb-0">Pakohuone</h3>
            </div>
            <div id="sidebar-body">
                <div class="list-group list-group-flush">
                </div>
            </div>

            <div id="sidebar-footer" class="border-top">
                <div class="list-group list-group-flush">
                </div>
            </div>
        </div>

        <div id="page">

            <div id="page-toolbar" class="container-fluid align-items-center d-flex border-bottom bg-light">
                <button id="sidebar-toggle" class="btn btn-light">
                    <i class="fas fa-bars"></i>
                </button>

                <h4 class="ml-3 mr-auto mb-0">@ViewBag.Title</h4>

                <div>
                    @RenderSection("ToolbarActions", false)
                </div>
            </div>

            <main id="page-content" class="container-fluid mt-3">
                @RenderBody()
            </main>

        </div>

    </div>

    @*JQuery 3.4.1*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*Popper.js 1.15.0*@
    <script src="~/lib/popper.js/dist/popper.min.js"></script>
    @*Bootstrap 4.3.1*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @*bs-custom-file-input 1.3.2*@
    <script src="~/lib/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    @*DataTables (Bootstrap 4) 1.10.19*@
    <script src="~/lib/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>

    <script src="~/js/admin/layout.js"></script>

    @RenderSection("Scripts", false)
</body>
</html>