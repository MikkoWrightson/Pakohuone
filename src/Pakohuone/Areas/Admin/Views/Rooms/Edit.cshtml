@model Room

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col">
        <form asp-action="Edit">
            <div class="card">
                <h5 class="card-header">@Model.GetType().Name</h5>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <div class="form-group">
                            <label asp-for="WorldId" class="control-label"></label>
                            <select class="form-control" asp-for="WorldId" asp-items="ViewBag.Worlds" disabled>
                            </select>
                            <span asp-validation-for="WorldId" class="text-danger"></span>
                        </div>
                        <label asp-for="LevelId" class="control-label"></label>
                        <select class="form-control" asp-for="LevelId" asp-items="ViewBag.Levels">
                            <option></option>
                        </select>
                        <span asp-validation-for="LevelId" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row justify-content-end">
                        <div class="col-auto">
                            <button class="btn btn-primary"
                                    type="submit">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section ToolbarActions {
    <partial name="_ReturnActionPartial" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
