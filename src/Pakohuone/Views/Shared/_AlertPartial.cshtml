@{
    var alert = TempData.GetAlert();
    if (alert != null)
    {
        <div class="alert alert-@(alert.Type.ToString().ToLower()) alert-dismissible fade show" role="alert">
            @Html.Raw(@alert.Text)
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}
